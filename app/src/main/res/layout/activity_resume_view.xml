<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.dell.resumebuilderdemo.ResumeViewActivity">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TableLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Objective"
               android:textColor="#000"
               android:textStyle="italic"
               android:textSize="20dp"
               android:background="#aaf4f0" />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Hello World"
               android:textColor="#000"
               android:textSize="15dp"
               android:id="@+id/resumeViewObj"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Personal Information"
               android:textColor="#000"
               android:textStyle="italic"
               android:textSize="20dp"
               android:background="#aaf4f0" />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="15dp"
               android:textColor="#000"
               android:text="Hello World"
               android:id="@+id/resumeViewPer"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Academia"
               android:textColor="#000"
               android:textStyle="italic"
               android:textSize="20dp"
               android:background="#aaf4f0" />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Hello World"
               android:textColor="#000"
               android:textSize="15dp"
               android:id="@+id/resumeViewEdu"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Work"
               android:textColor="#000"
               android:textStyle="italic"
               android:textSize="20dp"
               android:background="#aaf4f0" />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Hello World"
               android:textSize="15dp"
               android:textColor="#000"
               android:id="@+id/resumeViewWork"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Other"
               android:textColor="#000"
               android:textStyle="italic"
               android:textSize="20dp"
               android:background="#aaf4f0" />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Hello World"
               android:textColor="#000"
               android:textSize="15dp"
               android:id="@+id/resumeViewOther"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="15dp"
               android:text="\n\nReferences available upon Request"
               android:textColor="#000"
               android:layout_gravity="center"
               android:textAlignment="center"
               android:textStyle="italic"/>
       </TableLayout>
   </ScrollView>
</LinearLayout>
